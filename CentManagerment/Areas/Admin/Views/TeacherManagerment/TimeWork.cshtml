
@{
    ViewBag.Title = "Quản lý thời gian";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var soThuTu = 0;

}


<div class="content-header content-header-wrap">
    <h1 class="fleft">Quản lý thời gian</h1>
    <div class="clearfix"></div>
</div>
<br />
<section class="giaovien" id="giaovien">
    <div class="list-rent__content section-table table-extend">
        <div class="form-group nhanvien-chinhsua__input">
            <div class="input-box fleft">
                @Html.DropDownList("TeacherSearch", (IEnumerable<SelectListItem>)ViewBag.listTeacher, "-- Chọn tên giáo viên --", new { @class = "form-control", @id = "teacherId" })
            </div>
            <div class="clear-fix"></div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã thời gian</th>
                    <th>TG dạy(h)</th>
                    <th>Ngày</th>
                    <th>Tùy chọn</th>
                </tr>
            </thead>
            <tbody id="body-table"></tbody>
        </table>
    </div>
    <br />
    <div class="list-rent__content section-table table-extend">
        <div class="form__table--content">
            <div class="form__table-col-6">
                <label for="">Mã thời gian:</label>
                <input type="text" value="" id="idwork" disabled>
            </div>
            <br />
            <div class="form__table-col-6">
                <label for="">Giờ dạy:</label>
                <input type="text" value="" id="timework">
            </div>
            <div class="form__table-col-6">
                <label for="">Ngày dạy:</label>
                <input type="date" value="" id="datework">
            </div>
        </div>
        <div class="fixed__button text-center" style="margin-top:20px">
            <input type="button" value="Thêm" id="add-timework">
            <input type="button" value="Sửa" id="edit-timework">
            <input type="button" value="Hủy bỏ" id="clear-timework">
        </div>
    </div>
</section>


