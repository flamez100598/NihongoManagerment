@model CentManagerment.BU.DTO.NewsDTO
@using CentManagerment.BU.DTO
@{
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ListNews = (List<NewsDTO>)ViewBag.ListNews;
}

<section id="section_tinchitiet" style="padding:70px 0">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 page-content">
                <section>
                    <h3>@Html.DisplayFor(model => model.NewsTitle)</h3>
                    <div class="news-infor">
                        <p class="date">@Html.DisplayFor(model => model.NewsPostDate).ToString()</p>

                    </div>
                    <div class="content">
                        <p><b>@Model.NewsShortContent</b></p>
                        @Html.Raw(Model.NewsContent)
                    </div>
                </section>
            </div>
            <div class="col-lg-4 right-sidebar">
                <div class="col-lg-12 title-2">
                    <h2 style="background:#4080ff">
                        bài viết hay
                    </h2>
                </div>

                <div class="clearfix"></div>
                <div class="row hot-post">
                    @if (ListNews != null)
                    {
                        foreach (var newdto in ListNews)
                        {
                            <div class="col-lg-5">
                                <a href="#" class="img-box">
                                    <img class="img-fluid" src="@newdto.NewsAvatar" alt="" style="padding:0 5px">
                                </a>
                            </div>
                            <div class="col-lg-7">
                                <a href="@Url.Action("DetailsNew", "Home", new { id = Common.GenerateUrl.GenerateSlug(newdto.NewsTitle, newdto.NewsId) })" class="hot-post-name">
                                    <p style="font-weight: bold;">@newdto.NewsTitle</p>
                                    @newdto.NewsPostDate
                                    <p>Create by: @newdto.NewsNameUserPost</p>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</section>
<style>
    .title-2{
        border-color:black;
    }
</style>